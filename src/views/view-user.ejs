<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js"></script>
</head>

<body>
    <div style="width: 600; margin: auto">
        <h3 style="padding: 10px 0;">View Detail User id = <%= id %> </h3>
        <form action="/handle-update-user" method="post">
            <!-- Name -->
            <div class="mb-3">
                <label class="form-label">Full Name:</label>
                <input
                value="<%= user.name %>"
                name="fullname" type="text" class="form-control" placeholder="your name">
            </div>
            <!-- Email -->
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input
                value="<%= user.email %>"
                name="email" type="email" class="form-control" placeholder="name@example.com">
            </div>
            <!-- Address -->
            <div class="mb-3">
                <label class="form-label">Address:</label>
                <textarea name="address" class="form-control" rows="2"> <%= user.address %> </textarea>
            </div>
            <!-- Button -->
            <div class="mb-3">
                <button class="btn btn-warning" type="submit">Update</button>
            </div>
        </form>
    </div>
</body>

</html>